{
  "manifest_version": 2,

  "name": "Seahorse",
  "description": "Discrimination-free browsing",
  "version": "1.0",

  "permissions": ["tabs", "storage"],

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames" : false
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  }
}
